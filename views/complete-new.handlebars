<div class="row mt-4">
    <div class="col-lg-6 offset-lg-3">
        <div class="card">
            <div class="card-body">
                <div class="card-title">
                    <h3>Completion</h3>
                    <div class="lead">
                        Map: {{map.name}}
                    </div>
                </div>
                <div class="card-text">
                    <form action="/maps/{{map.id}}/complete" method="post">
                        <div class="form-group">
                            <label for="Name">Name</label>
                            <input name="username" class="form-control" placeholder="Jane Doe" />
                        </div>
                        <div class="form-group">
                            <label for="Email">Email</label>
                            <input name="email" class="form-control" placeholder="Jane.Doe@gmail.com" />
                        </div>
                        <div class="text-right">
                            <a href="/" class='text-muted mr-2'>Cancel</a>
                            <button type="submit" class="btn btn-primary" name="button">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>