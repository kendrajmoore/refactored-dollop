<div class="container-form">
	<div class="row">
		<div class="col-sm-8 col-sm-offset-2 well">
			<div class="col-sm-12 form-legend">
				<h2 class="form-title">Edit Your Vision Map</h2>
			</div>
			<div class="col-sm-12 form-column">
				<form action="/maps/{{map.id}}?_method=PUT" method="post">
					<div class="form-group">
						<label for="creator">Creator</label>
						<input type="text" id="creator" name="creator" class="form-control" placeholder={{map.creator}}>
					</div>
					<div class="form-group">
						<label for="URL">URL</label>
						<input type="text" id="url" name="creatorUrl" class="form-control" placeholder={{map.creatorUrl}}>
					</div>
					<div class="form-group">
						<label for="Mission">Vision</label>
						<textarea id="mission" name="mission" class="form-control" placeholder={{map.mission}}></textarea>
					</div>
					<div class="form-group">
						<label for="goalOne">Action #1</label>
						<input type="text" id="goalOne" name="goalOne" class="form-control" placeholder={{map.goalOne}}>
					</div>
					<div class="form-group">
						<label for="goalTwo">Action #2</label>
						<input type="text" id="goalTwo" name="goalTwo" class="form-control" placeholder={{map.goalTwo}}>
					</div>
					<div class="form-group">
						<label for="goalThree">Action #3</label>
						<input type="text" id="goalThree" name="goalThree" class="form-control" placeholder={{map.goalThree}}>
					</div>
					<div class="form-group">
						<label for="goalFour">Action #4</label>
						<input type="text" id="goalFour" name="goalFour" class="form-control" placeholder={{map.goalFour}}>
					</div>
					<div class="form-group">
						<label for="goalFive">Action #5</label>
						<input type="text" id="goalFive" name="goalFive" class="form-control" placeholder={{map.goalFour}}>
					</div>
	
					<a href="/maps/{{map.id}}" class='text-muted mr-2'>Cancel</a>
					<input type="submit" value="Update" class="btn btn-primary" id="form-button">
				</form>
				<form action="/maps/{{map.id}}?_method=DELETE" method="POST">
					<button type="submit" class='btn btn-primary' id='delete'>Delete</button>
				</form>
			</div>
		</div>
	</div>
</div>