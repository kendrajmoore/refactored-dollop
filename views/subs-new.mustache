  
{{> header}}
{{> navbar}}
    <div class="container">
        <div class="row mt-4">
            <div class="col-lg-6 offset-lg-3">
                <div class="card" id="subs">
                    <div class="card-body">
                        <div class="card-title">
                            <h3 class="sub">Subscribe</h3>
                            <div class="sub">
                                Creator: {{map.creator}}
                            </div>
                        </div>
                        <div class="card-text">
                            <form action="/maps/{{map.id}}/subs" method="post">
                                <div class="form-group">
                                    <label for="Name">Name</label>
                                    <input name="username" class="form-control" placeholder="Jane" />
                                </div>
                                <div class="form-group">
                                    <label for="Email">Email</label>
                                    <input name="email" class="form-control" placeholder="Jane@gmail.com" />
                                </div>
                                <div class="text-right">
                                    <a href="/" class='text-muted mr-2'>Cancel</a>
                                    <button type="submit" class="btn btn-primary" name="button">Save</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{> footer}}
   
   